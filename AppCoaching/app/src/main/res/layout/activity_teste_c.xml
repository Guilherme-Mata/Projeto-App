<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".TesteC">

    <RadioGroup
        android:id="@+id/radioC"
        android:layout_width="367dp"
        android:layout_height="198dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56">

        <RadioButton
            android:id="@+id/radioC1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioC2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioC3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textTituloC"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPerguntaC"
        android:layout_width="408dp"
        android:layout_height="148dp"
        android:layout_marginTop="36dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloC" />

    <ProgressBar
        android:id="@+id/progressBarC"
        style="?android:attr/progressBarStyle"
        android:layout_width="293dp"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/radioC"
        app:layout_constraintTop_toTopOf="@+id/radioC" />

    <Button
        android:id="@+id/btnOKC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="AtualizaPerguntaTesteC"
        android:layout_marginBottom="136dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNquestaoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloC" />

</androidx.constraintlayout.widget.ConstraintLayout>