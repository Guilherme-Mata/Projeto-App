<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTesteA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".TesteA">

    <TextView
        android:id="@+id/textTituloA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPerguntaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloA" />

    <TextView
        android:id="@+id/textSubPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPerguntaA" />

    <RadioGroup
        android:id="@+id/radioA"
        android:layout_width="364dp"
        android:layout_height="259dp"
        android:layout_marginBottom="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioA1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioA2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioA3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioA4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnOKA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:onClick="AtualizaPerguntaTesteA"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarA"
        style="?android:attr/progressBarStyle"
        android:layout_width="361dp"
        android:layout_height="331dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>