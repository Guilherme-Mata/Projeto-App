<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".TesteD">

    <RadioGroup
        android:id="@+id/radioD"
        android:layout_width="368dp"
        android:layout_height="343dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76">

        <RadioButton
            android:id="@+id/radioD1"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioD2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioD3"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioD4"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioD5"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />


    </RadioGroup>

    <TextView
        android:id="@+id/textTituloD"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPerguntaD"
        android:layout_width="408dp"
        android:layout_height="148dp"
        android:layout_marginTop="36dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloD" />

    <ProgressBar
        android:id="@+id/progressBarD"
        style="?android:attr/progressBarStyle"
        android:layout_width="293dp"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/radioD"
        app:layout_constraintTop_toTopOf="@+id/radioD" />

    <Button
        android:id="@+id/btnOKD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="36dp"
        android:text="OK"
        android:onClick="AtualizaPerguntaTesteD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNquestaoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloD" />

</androidx.constraintlayout.widget.ConstraintLayout>