<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutTesteB"
    android:background="@color/colorPrimaryDark"
    tools:context=".TesteB">

    <RadioGroup
        android:id="@+id/radioB"
        android:layout_width="405dp"
        android:layout_height="251dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454">

        <RadioButton
            android:id="@+id/radioB1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioB2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioB3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioB4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="casual"
            android:text="RadioButton"
            android:textSize="20dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textTituloB"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPerguntasB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloB" />

    <ProgressBar
        android:id="@+id/progressBarB"
        style="?android:attr/progressBarStyle"
        android:layout_width="289dp"
        android:layout_height="268dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/radioB"
        app:layout_constraintTop_toTopOf="@+id/radioB" />

    <Button
        android:id="@+id/btnOKB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:onClick="AtualizaPergunta"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="160dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNquestaoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloB" />

</androidx.constraintlayout.widget.ConstraintLayout>